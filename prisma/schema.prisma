generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model PostingEvent {
  id          String   @id @default(cuid())
  title       String
  subTitle    String
  description String   @db.LongText
  img         String
  link        String?
  isShow      Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model User {
  id        String   @id @default(cuid())
  username  String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model RefreshToken {
  id        String   @id @default(cuid())
  token     String   @db.LongText
  userId    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model PostingHrBroadcast {
  id          String   @id @default(cuid())
  title       String
  subTitle    String
  description String   @db.LongText
  img         String
  link        String?
  isShow      Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model PostingHrInfo {
  id          String   @id @default(cuid())
  title       String
  subTitle    String
  description String   @db.LongText
  img         String
  link        String?
  isShow      Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model PostingCsr {
  id          String   @id @default(cuid())
  title       String
  subTitle    String
  description String   @db.LongText
  file        String
  isShow      Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model PostingWingsMart {
  id          String   @id @default(cuid())
  title       String
  description String   @db.LongText
  img         String
  isShow      Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model PostingWFCArticel {
  id          String   @id @default(cuid())
  title       String
  subTitle    String
  description String   @db.LongText
  img         String
  link        String?
  isShow      Boolean  @default(false)
  createdAt   DateTime @default(now())
